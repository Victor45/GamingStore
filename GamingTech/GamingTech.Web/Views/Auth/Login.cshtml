@using System.Web.Optimization
@model GamingTech.Web.Models.User.UserLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/bundle/style/css")
    @Styles.Render("~/bundle/bootstrap/css")
</head>
<body>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @id = "Login form" }))
    {
        <div class="container">
            <h1>Login</h1>
            <p>Please fill in this form to log in into your account.</p>

            @Html.ValidationSummary(true)

            <hr>
            <div class="form-group">
                <label><b>Username or Email</b></label>
                @Html.TextBoxFor(model => model.Credential, new { @class = "input", @id = "username", @placeholder = "Enter Username or Email", required = "required" })
            </div>

            <div class="form-group">
                <label><b>Password</b></label>
                @Html.PasswordFor(model => model.Password, new { @class = "input", @id = "pass", @placeholder = "Enter Password", required = "required" })
            </div>
            <hr>

            @*<p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>*@

            <button type="submit" class="primary-btn" style="width: 100%; cursor: pointer";>Sign In</button>

        </div>

        <div class="container">
            <p style="padding-top: 20px">Don't have an account? <a href="@Url.Action("Register", "Auth")">Sign Up</a>.</p>
        </div>
    }
</body>
</html>
