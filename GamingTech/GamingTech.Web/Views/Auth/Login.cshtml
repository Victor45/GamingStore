@using System.Web.Optimization
@model GamingTech.Web.Models.User.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/bundle/style/css")
</head>
<body>
    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "Register form" }))
    {
        <div class="container">
            <h1>Login</h1>
            <p>Please fill in this form to login into your account.</p>

            @Html.ValidationSummary(true)

            <hr>
            <div class="form-group">
                <label for="username"><b>Username</b></label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @id = "username", @placeholder = "Enter Username", required = "required" })
            </div>

            <div class="form-group">
                <label for="pass"><b>Password</b></label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "pass", @placeholder = "Enter Password", required = "required" })
            </div>

            <hr>

            @*<p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>*@

            <button type="submit" class="primary-btn" style="width: 100%; cursor: pointer" ;>Sign In</button>

        </div>

        <div class="container signin">
            <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Sign Up</a>.</p>
        </div>
    }
</body>
</html>
