@using System.Web.Optimization

@{
    Layout = null;
}

@model GamingTech.Web.Models.User.RegisterModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/bundle/style/css")
    @Styles.Render("~/bundle/bootstrap/css")
</head>
<body>

    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "Register form" }))
    {
        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>

            @Html.ValidationSummary(true)

            <hr>
            <div class="form-group">
                <label for="username"><b>Username</b></label>
                @Html.TextBoxFor(model => model.Username, new { @class = "input", @id = "username", @placeholder = "Enter Username", required = "required" })
            </div>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                @Html.TextBoxFor(model => model.Email, new { @class = "input", @id = "email", @placeholder = "Enter Email", required = "required" })
            </div>

            <div class="form-group">
                <label for="pass"><b>Password</b></label>
                @Html.PasswordFor(model => model.Password, new { @class = "input", @id = "pass", @placeholder = "Enter Password", required = "required" })
            </div>

            <div class="form-group">
                <label for="pass-repeat"><b>Repeat Password</b></label>
                @Html.PasswordFor(model => model.RepPassword, new { @class = "input", @id = "pass-repeat", @placeholder = "Repeat Password", required = "required" })
            </div>
            <hr>

            @*<p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>*@

            <button type="submit" class="primary-btn" style="width: 100%; cursor: pointer";>Register</button>

        </div>

    <div class="container">
        <p style="padding-top: 20px">Already have an account? <a href="@Url.Action("Login", "Auth")">Sign in</a>.</p>
    </div>
    }

</body>
</html>

